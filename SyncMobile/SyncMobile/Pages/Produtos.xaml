<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SyncMobile.Pages.Produtos"
             Title="Adicionar novos Produtos">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Label Text="Produto" />
            <Entry x:Name="ProdutoEntry" Placeholder="Digite o nome do produto" />

            <Label Text="Valor" />
            <Entry x:Name="ValorEntry" Keyboard="Numeric" Placeholder="Digite o valor" />

            <Label Text="Informação Técnica" />
            <Editor x:Name="InformacaoTecnicaEditor" Placeholder="Digite as informações técnicas" />

            <Button Text="Abrir Câmera" Clicked="AbrirCamera_Clicked"/>
            <Image x:Name="imagemCapturada" HeightRequest="200"/>

            <Button Text="Enviar" Clicked="OnEnviarClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
