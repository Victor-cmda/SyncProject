<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SyncMobile.Pages.Visitas"
             Title="Cadastro de Visitas">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label Text="Data da Visita" />
            <DatePicker x:Name="DataVisitaPicker" />

            <Label Text="Localização" />
            <Entry x:Name="LocalizacaoEntry" Placeholder="Digite a localização" />

            <Button Text="Enviar" Clicked="OnEnviarClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
